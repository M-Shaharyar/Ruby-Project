<section class="form-auth text-center">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Please Sign Up</h1>
    <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.text_field :first_name, autofocus: true, class: "field", placeholder: "First Name" %><br><br>
      <%= f.text_field :last_name, autofocus: true, class: "field", placeholder: "Last Name" %><br><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field", placeholder: "Email" %><br><br>
      <%= f.password_field :password, autocomplete: "new-password" ,class: "field", placeholder: "Password"%><br><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "field", placeholder: "Password Confirmation" %><br><br>
     <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button><br>
  <% end %>
  <%= render "devise/shared/links" %>

</section>