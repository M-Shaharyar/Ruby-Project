<div class = "container">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col-6">
        <p class="mb-0"><%= @property.address%></p>
        <p class="h2"><%= @property.price>0 ? number_to_currency(@property.price, precision:0) : "For sale" %></p>
        </div>
        <div class = "col-6 text-center bg-light p-3">
          <div class = "row mr-3">
            <div class = "col-4">
              <p class="m-0"><strong>Rooms</strong></p>
              <span class="lead"><%= @property.rooms%></span>
            </div>
            <div class = "col-4">
              <p class="m-0"><strong>Bathrooms</strong></p>
              <%= @property.bathrooms%>
            </div>
            <div class = "col-4">
                <p class="m-0"><strong>Parking</strong></p>
                <%= @property.parking_spaces%>
            </div>
            </div>
            </div>
        </div>
    <div class="row border-top border-bottom mt-5 mb-4 pt-4 pb-4">
      <div class="col-6">
         <strong ><%=link_to "Est. Monthly Repayments of #{ number_to_currency((@property.price-(@property.price*0.1))/360,precision: 0)}*", "#",class:"text-success"%></strong>
      </div>
      <div class="col-6 text-right">
       <strong ><%=link_to "Can I afford this property?","#", class:"text-success"%></strong>
      </div>
    </div>
    <div class="row">
          <div class="col">
            <p class="h3"><%= @property.name %></p>
            <p class="h5">Property Description</p>

          <div id="prop-details"  class="mb-5" >
          <%=  simple_format @property.datails %>
          </div> 

         <button class="btn btn-outline-info mt-3" id="toggleDetails">Show more</button>
         <p class="mt-5"> * This rate is based on a 30 year mortgage, after paying an initial 10% down payment.
         Shorter term mortgage would require a higher month repayments.</p>
  </div>
  </div>
  </div>
        <div class="col-4">
          <%= render "properties/agent_details"%>
        </div>
</div>